generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Player {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  position  String
  nationality String
  teams     Team[]
}

model Team {
  id            Int       @id @default(autoincrement())
  name          String
  foundationYear Int
  country       String
  coach         String
  players       Player[]
}

model Match {
  id          Int     @id @default(autoincrement())
  date        DateTime
  location    String
  score       String
  homeTeam    Team
  awayTeam    Team
}